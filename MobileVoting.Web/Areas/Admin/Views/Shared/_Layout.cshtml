<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="This is the administration website for a mobile voting application">
    <meta name="author" content="Wahid Shalaly">
    <link rel="shortcut icon" href="~/Content/images/favicon.png">
    @Styles.Render("~/styles/admin_styles")
    @Scripts.Render("~/scripts/modernizr")
</head>
<body>
    <div class="navbar navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">
                <a class="brand">
                    <img src="~/Content/images/favicon.png" style="width: 32px; height: 32px">Mobile Voting Application</a>
                <a href="/Admin/Auth/SignOut" class="pull-right">Sign Out</a>
            </div>
        </div>
    </div>
    <div class="container">
        @RenderBody()
        @Scripts.Render("~/scripts/jquery")
        @Scripts.Render("~/scripts/bootstrap")
        @RenderSection("scripts", required: false)
    </div>
</html>
